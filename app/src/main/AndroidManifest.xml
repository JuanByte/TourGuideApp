<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CultureActivity"
            android:label="@string/culture_name"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".HistoricalPlacesActivity"
            android:label="@string/historicalPlaces_name"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".HotelsActivity"
            android:label="@string/hotels_name"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".ParksActivity"
            android:label="@string/parks_name"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".MuseumActivity"
            android:label="@string/museums_name"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".FestivalActivity"
            android:label="@string/festivals_name"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>